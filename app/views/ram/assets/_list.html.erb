<table class="list">
	<thead style="text-align:left;">
		<tr>
			<th><%= l('label_asset_make') %></th>
			<th><%= l('label_asset_model') %></th>
			<th><%= l('label_asset_serial') %></th>
			<th><%= l('label_description') %></th>
			<th><%= l('label_owned_by') %></th>
			<th><%= l('label_status') %></th>
			<% if authorize_for_with_global(:assets, :edit, true) %>
			<th><%= l('label_edit') %></th>
			<% end %>
			<% if authorize_for_with_global(:assets, :delete, true) %>
			<th><%= l('label_delete') %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<% @assets.each do |asset| %>
		<tr class="<%= cycle("odd", "even") %>">
			<td><%= asset.make %></td>
			<td><%= asset.model %></td>
			<td><%= link_to(asset.serial, asset, :id=> asset) %></td>
			<td><%= asset.description %></td>
			<td><%= asset.owned_by.name %></td>
			<td><%= asset.status.name %></td>
			<% if authorize_for_with_global(:assets, :edit, true) %>
			<td>
				<%= link_to(image_tag('edit.png'), edit_asset_path(asset)) %>
			</td>
			<% end %>
			<% if authorize_for_with_global(:assets, :delete, true) %>
			<td>
				<%= link_to(image_tag('delete.png'), asset_path(asset,:per_page => params[:per_page], :page => params[:page]), :confirm => "Are you sure?", :method => :delete) %>
			</td>
			<% end %>
		</tr>
    <%- end %>
	</tbody>
</table>
