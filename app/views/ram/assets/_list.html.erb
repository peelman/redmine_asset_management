<table class="list">
  <thead style="text-align:left;">
    <tr>
      <th><%= l('label_asset_make') %></th>
      <th><%= l('label_asset_model') %></th>
      <th><%= l('label_asset_serial') %></th>
      <th><%= l('label_asset_description') %></th>
			<% if authorize_for_with_global(:assets, :delete, true) %>
      <th><%= l('asset_remove') %></th>
				<% end %>
    </tr>
  </thead>
  <tbody>
    <% @assets.each do |asset| %>
      <tr class="<%= cycle("odd", "even") %>">
				<td><%= link_to(asset.make, asset, :id => asset) %></td>
				<td><%= asset.model %></td>
				<td><%= asset.serial %></td>
				<td><%= asset.description %></td>
				<% if authorize_for_with_global(:assets, :delete, true) %>
				<td>
					<%= link_to(image_tag('delete.png'), asset_path(asset,:per_page => params[:per_page], :page => params[:page]), :confirm => "Are you sure?", :method => :delete) %>
				</td>
				<% end %>
      </tr>
    <%- end %>
  </tbody>
</table>
